<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:foreground="?selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_lets_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="236dp"
        android:layout_height="236dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/bg_button"
        android:foreground="?selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView"
        app:layout_constraintEnd_toEndOf="@+id/appCompatImageView" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_profile_fullname"
        style="@style/nunito"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/bg_input"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:hint="Full Name"
        android:paddingHorizontal="10dp"
        android:textColorHint="#68000000"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView"
        tools:layout_editor_absoluteX="24dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_profile_nickname"
        style="@style/nunito"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="26dp"
        android:background="@drawable/bg_input"
        android:clickable="true"
        android:focusable="true"
        android:hint="Nick Name"
        android:paddingHorizontal="10dp"
        android:textColorHint="#68000000"
        app:layout_constraintTop_toBottomOf="@+id/input_profile_fullname"
        tools:layout_editor_absoluteX="24dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_profile_date"
        style="@style/nunito"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="26dp"
        android:background="@drawable/bg_input"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:hint="Date Of Birth"
        android:paddingHorizontal="10dp"
        android:textColorHint="#68000000"
        app:layout_constraintTop_toBottomOf="@+id/input_profile_nickname"
        tools:layout_editor_absoluteX="24dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_profile_email"
        style="@style/nunito"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="26dp"
        android:background="@drawable/bg_input"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:hint="Email"
        android:paddingHorizontal="10dp"
        android:textColorHint="#68000000"
        app:layout_constraintTop_toBottomOf="@+id/input_profile_date"
        tools:layout_editor_absoluteX="24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/input_profile_gender"
        style="@style/nunito"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="26dp"
        android:background="@drawable/bg_input"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:text="Gender"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:paddingHorizontal="10dp"
        android:textColor="#68000000"
        app:layout_constraintTop_toBottomOf="@+id/input_profile_email"
        tools:layout_editor_absoluteX="24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_profile_continue"
        style="@style/nunito"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="26dp"
        android:background="@drawable/bg_button"
        android:foreground="?selectableItemBackgroundBorderless"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_profile_gender"
        app:layout_constraintVertical_bias="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>